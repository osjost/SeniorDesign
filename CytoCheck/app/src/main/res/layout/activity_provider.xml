<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:gravity="center">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/spacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/welcomeProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Welcome, Provider"
            android:textColor="#04589B"
            android:textSize="34sp" />

        <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="36sp"
        android:orientation="horizontal">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#04589B"
                android:text="Log Out" />

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#04589B"
                android:text="Refresh" />

        </LinearLayout>

        <TextView
            android:id="@+id/referralCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Referral Code:"
            android:textColor="#04589B"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient List"
            android:textColor="#04589B"
            android:textSize="26sp" />

        <ListView
            android:id="@+id/listViewPatients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/inboxLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications and Requests"
            android:textSize="24sp"/>

        <ListView
            android:id="@+id/inboxListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>